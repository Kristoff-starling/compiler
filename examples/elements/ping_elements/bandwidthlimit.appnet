state:
	last_bw: Instant
	limit_bw: float
	token_bw: float
	per_sec_bw: float

init():
	last_bw = current_time()
	limit_bw = 50.0
	token_bw = 50.0
	per_sec_bw = 50.0

req(rpc):
	token_bw = min(limit_bw, token_bw + (per_sec_bw * time_diff(current_time(), last_bw)))
	last_bw = current_time()
    size_bw = byte_size(rpc)
    match token_bw >= size_bw:
		true =>
			token_bw = token_bw - size_bw
			send(rpc, Down)
		false =>
			send(err('bandwidthlimit'), Up)

resp(rpc):
    send(rpc, Up)
