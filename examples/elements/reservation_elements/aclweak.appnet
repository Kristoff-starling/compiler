state
{
	@consistency(weak) @combiner(sum) @persistence(true)
	acl: Map<string, string>
}

fn init() {
	acl.set('Jack', 'No');
}

fn req(rpc_req) {
	match (acl.get(rpc_req.get('customer_name'))) {
		Some(permission) => {
			match (permission) {
				'Yes' => {
					send(rpc_req, Down);
				}
				'No' => {
					send(err('acl'), Up);
				}
				_ => {
				}
			};
		}
		None => {
			send(rpc_req, Down);
		}
	};
}

fn resp(rpc_resp) {
    send(rpc_resp, Up);
}
